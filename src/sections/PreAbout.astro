<section class="p-20 text-theme-purple bg-theme-lights relative" id="pre-about">
    <div class="flex flex-col max-w-500 mx-auto w-full h-screen justify-around">
        <h1 class="section-title  w-2/3"id="title-el">
            Lotus helps tech-driven businesses grow even when conditions<br>
            aren’t ideal.
        </h1>
        <div>
            <div class="border border-theme-purple mb-8 w-full" id="line-el"></div>
            <div class="flex flex-row">
                <p class="prg w-1/3 max-w-100 mr-14 md:w-1/2">Great products don’t grow in perfect conditions. <br> They grow when experience, structure and vision come together.</p>
                <p class="prg w-1/3 max-w-100 md:w-1/2">At Lotus, development expertise meets strategic project leadership — so your product can rise, evolve and reach its full potential.</p>
            </div>
        </div>
    </div>
</section>
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    import { SplitText } from "gsap/SplitText";

    gsap.registerPlugin( ScrollTrigger, SplitText )

    document.addEventListener("DOMContentLoaded", ( )=> {

        document.fonts.ready.then( function( ) {
            const line = document.getElementById('line-el')
            const title = document.getElementById('title-el')
            gsap.from( line, {
                scrollTrigger: {
                    trigger: title,
                    start: "center center",
                //    markers: true,
                },
                width: "0%",
                ease: "none",
                duration: 1
            })
            const splitTitle =  SplitText.create( title, {
                type: "lines, chars",
                linesClass: "split-lines"
            } )

            gsap.fromTo( splitTitle.chars, 
            {
                opacity: 0.2, 
            }, 
            { 
                opacity: 1,
                stagger: 1,
                scrollTrigger: {
                    trigger: "#pre-about",
                   // markers: true,
                    start: "top 80%",
                    end: "center 56%",
                    scrub: true,
                }
            })
        })


    })

</script>