---
import Button from "./Button.astro";
import { SERVICES } from "../types/services";
---

{
    SERVICES.map(({ id, title, text }, index ) => (
        <div class={`bg-theme-lights text-theme-purple shadow-theme-box py-12 px-14 rounded-3xl  border-white/20 sticky mb-40 max-w-7xl` } style={`top: ${(index += .8) * 72}px`}>
            <h1 class="cards-title mb-12 border-b-2 border-theme-purple pb-8">
                {title}
            </h1>
            <div class="flex flex-row justify-around items-center py-6 gap-8">
                <img 
                    class="w-58 h-58 object-contain" 
                    src={`/servicesImg/${id}.png`} 
                    alt={`Icon for ${title}`}
                />
                <div class="flex flex-col w-1/2 justify-center">
                    <p class="prg mb-10 text-lg">
                        {text}
                    </p>
                    <div class="w-1/2">
                    <Button 
                        href={`/services/${id}`}
                        text="Let's grow"
                    />
                    </div>
                </div>
            </div>
        </div>
    ))
}